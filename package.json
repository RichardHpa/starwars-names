{
	"name": "richardhpa-starwars-names",
	"version": "0.0.0-development",
	"description": "Get random Star Wars names",
	"main": "dist/index.js",
	"scripts": {
		"check-coverage": "jest --coverage",
		"test:single": "jest",
		"test": "jest --watchAll",
		"semantic-release": "semantic-release --branches main",
		"commit": "cz",
		"prepare": "husky install",
		"prebuild": "rimraf dist",
		"build": "babel src -d dist --ignore 'src/**/*.test.js' --copy-files --no-copy-ignored"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/RichardHpa/starwars-names.git"
	},
	"keywords": [
		"random",
		"star",
		"wars"
	],
	"files": [
		"dist",
		"README.md"
	],
	"author": "Richard M Hpa <richard.m.hpa@gmail.com> (https://richard-hpa.com/)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/RichardHpa/starwars-names/issues"
	},
	"homepage": "https://github.com/RichardHpa/starwars-names#readme",
	"dependencies": {
		"unique-random-array": "^1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.15.7",
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.6",
		"babel-jest": "^27.2.2",
		"chai": "^4.3.4",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.2",
		"jest": "^27.2.2",
		"rimraf": "^3.0.2",
		"semantic-release": "^18.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"jest": {
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest"
		}
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	}
}
